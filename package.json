{
  "name": "node-app",
  "version": "1.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server template",
  "main": "src/app.js",
  "scripts": {
    "test": "jest --watchAll --detectOpenHandles",
    "tsc": "tsc --watch",
    "dev": "cross-env NODE_ENV=development nodemon dist/src/app.js",
